<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.goodee.ex11.mapper.EmployeeMapper">

	<select id="selectEmployeeCount" resultType="int">
		SELECT COUNT(*) FROM EMPLOYEES
	</select>

	<select id="selectEmployees" parameterType="Map" resultType="Department">
		SELECT A.RK, A.*
			FROM (SELECT RANK() OVER (ORDER BY HIRE_DATE DESC) AS RK, EMPLOYEES.*
			FROM EMPLOYEES) A
		WHERE
			A.RK
		BETWEEN #{beginRecord} AND #{endRecord}
	</select>

</mapper>